<!DOCTYPE html>
<html>
    <body>
      <header>
        <%- include('../partials/header'); %>
      </header>

         <div class="main-content">
            <!--Start of NavBar-->
            <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
              <div class="container-fluid">
                <a class="navbar-brand" href="/">Pet Community</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarColor01">
                  <ul class="navbar-nav ms-auto">
                    <li class="nav-item active">
                      <a class="nav-link" href="adoption-main-page">Adopt a pet</a>
                    </li>
                    <li class="nav-item active">
                      <a class="nav-link" href="donor-main-page">Find a Donor</a>
                    </li>
                    <li class="nav-item active">
                      <a class="nav-link" href="shelter-main-page">Donate to a Shelter</a>
                    </li>
                    <div class="dropdown">
                      <button class="btn btn btn-dark dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Account
                      </button>
                      <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" href="account-update-page.ejs">Update Information</a>
                        <a class="dropdown-item" href="#">Logout</a>
                      </div>
                    </div>
                    
                  </ul>
                </div>
              </div>
            </nav>
            <!--End of NavBar -->

            <div>
              <!-- Search form -->
              <div class="container center_div" style="margin-left: 30%; margin-top: 10%;">
                <form class="d-flex" >
                  <input class="form-control me-2" style="width: 40%;" type="search" placeholder="Search" aria-label="Search">
                  <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
              </div>

              <label style="margin-top: 5%;">List of Veterinary Clinics</label>
              <br><br>
              <% for(var index = 0; index < itemData.length; index++){ %>
              <div class="card">
                <ul class="list-group list-group-flush">
                  <%= itemData[index].data()['name'] %> -
                  <%= itemData[index].data()['address'] %>

                </ul>
              </div>
              <% } %>
            </div>



         </div>

    </body>
</html>