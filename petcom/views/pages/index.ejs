<%- include('../partials/header') %>

<!DOCTYPE html>
<html>
    <body>
         <div class="main-content">
            <!--Start of NavBar-->
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
              <div class="container-fluid">
                <a class="navbar-brand" href="#">Pet Community</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                  <span class="navbar-toggler-icon"></span>
                </button>
            
                <div class="collapse navbar-collapse" id="navbarColor01">
                  <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                      <a class="nav-link" href="adoptapet">Adopt a pet</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="finddonor">Find a Donor</a>
                    </li>
                    <li class="nav-item">
                      <a class="nav-link" href="donateshelter">Donate to a Shelter</a>
                    </li>
                    <li class="nav-item">
                      <button type="button" class="btn btn-light" data-toggle="modal" data-target="#account">Account</button>
                    </li>
                    
                  </ul>
                </div>
              </div>
            </nav>
            <!--End of NavBar-->

            <!--Modal Logged in-->
            <div>
              <div class="modal fade" id="account" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Account</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">  
                      <form>
                        <div class="form-group">
                          <label for="exampleInputEmail1">Email address</label>
                          <input type="email" class="form-control" id="InputEmail" aria-describedby="emailHelp" placeholder="Enter email">
                        </div>
                        <div class="form-group">
                          <label for="exampleInputPassword1">Password</label>
                          <input type="password" class="form-control" id="nputPassword" placeholder="Password">
                        </div>
                      </form>
                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                      <button type="button" class="btn btn-primary">Submit</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!--Modal Logged in-->


            <!--Container-->
            <div style="margin-top: 5%; margin-left: 5%;">
              <h1>Home Page</h1>
            </div>
            



         </div>
    </body>
</html>